.wrapper
  = render partial: "shared/sidebar"

  .chat
    .header
      .header-left
        .group
          .group__name
            = @group.name
          .group__members-list
            Member: #{@members.join("、")}
      .header-right
        .header-right__btn
          = link_to "Edit", edit_group_path(@group)
    .messages
      = render partial: "message"

    %form.form
      %input.form__text{type: "text", placeholder: "type a message"}
      %label{for: "form__input-image"}
        = fa_icon("image lg", class: "icon")
        %input#form__input-image{type: "file"}
      %input.form__submit{type: "submit", value: "Send"}
